<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Column Container"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="true">
                <items jcr:primaryType="nt:unstructured">
                    <columncontainer
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Column Container"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <equalHeightColumns
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                name="./equalHeightColumns"
                                                text="Equal Height Columns?"
                                                value="true"/>
                                            <display
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/form/select"
												fieldLabel="Component Display"
												name="./visibility" 
												text="Component Display"
												value="true" >
												<datasource
													jcr:primaryType="nt:unstructured"
													sling:resourceType="acs-commons/components/utilities/genericlist/datasource"
													path="/etc/acs-commons/lists/loyaltydemo/display-options-source"/>
											</display>
                                            <containerLayout
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldDescription="Click 'Add field' to Add Column"
                                                fieldLabel="Column Layout">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./columnLayout">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <columnclass
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                                            fieldDescription="Enter Column Class"
                                                            fieldLabel="Column Class"
                                                            multiple="{Boolean}true"
                                                            name="./columnClass"
                                                            rootPath="/content/cq:tags/loyaltydemo"/>
                                                        <columnWidth
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldDescription="Desktop Column Width"
                                                            fieldLabel="Desktop Column Width"
                                                            name="./columnWidth">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <hundred
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="100%(12 of 12 col)"
                                                                    value="12"/>
                                                                <nintyOne
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="91%(11 of 12 col)"
                                                                    value="11"/>
                                                                <eightyThree
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="83%(10 of 12 col)"
                                                                    value="10"/>
                                                                <seventyFive
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="75%(9 of 12 col)"
                                                                    value="9"/>
                                                                <sixtySix
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="66%(8 of 12 col)"
                                                                    value="8"/>
                                                                <fiftyEight
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="58%(7 of 12 col)"
                                                                    value="7"/>
                                                                <fifty
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="50%(6 of 12 col)"
                                                                    value="6"/>
                                                                <fourtyOne
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="41%(5 of 12 col)"
                                                                    value="5"/>
                                                                <thirtyThree
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="33%(4 of 12 col)"
                                                                    value="4"/>
                                                                <twentyFive
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="25%(3 of 12 col)"
                                                                    value="3"/>
                                                                <sixteen
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="16%(2 of 12 col)"
                                                                    value="2"/>
                                                                <eight
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="8%(1 of 12 col)"
                                                                    value="1"/>
                                                            </items>
                                                        </columnWidth>
                                                        <columnWidthTablet
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            deleteHint="{Boolean}false"
                                                            fieldDescription="Tablet Column Width"
                                                            fieldLabel="Tablet Column Width"
                                                            name="./columnWidthTablet">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <hundred
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="100%(12 of 12 col)"
                                                                    value="12"/>
                                                                <nintyOne
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="91%(11 of 12 col)"
                                                                    value="11"/>
                                                                <eightyThree
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="83%(10 of 12 col)"
                                                                    value="10"/>
                                                                <seventyFive
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="75%(9 of 12 col)"
                                                                    value="9"/>
                                                                <sixtySix
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="66%(8 of 12 col)"
                                                                    value="8"/>
                                                                <fiftyEight
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="58%(7 of 12 col)"
                                                                    value="7"/>
                                                                <fifty
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="50%(6 of 12 col)"
                                                                    value="6"/>
                                                                <fourtyOne
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="41%(5 of 12 col)"
                                                                    value="5"/>
                                                                <thirtyThree
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="33%(4 of 12 col)"
                                                                    value="4"/>
                                                                <twentyFive
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="25%(3 of 12 col)"
                                                                    value="3"/>
                                                                <sixteen
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="16%(2 of 12 col)"
                                                                    value="2"/>
                                                                <eight
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="8%(1 of 12 col)"
                                                                    value="1"/>
                                                            </items>
                                                        </columnWidthTablet>
                                                        <columnWidthMobile
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            deleteHint="{Boolean}false"
                                                            fieldDescription="Mobile Column Width"
                                                            fieldLabel="Mobile Column Width"
                                                            name="./columnWidthMobile">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <hundred
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="100%(12 of 12 col)"
                                                                    value="12"/>
                                                                <nintyOne
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="91%(11 of 12 col)"
                                                                    value="11"/>
                                                                <eightyThree
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="83%(10 of 12 col)"
                                                                    value="10"/>
                                                                <seventyFive
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="75%(9 of 12 col)"
                                                                    value="9"/>
                                                                <sixtySix
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="66%(8 of 12 col)"
                                                                    value="8"/>
                                                                <fiftyEight
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="58%(7 of 12 col)"
                                                                    value="7"/>
                                                                <fifty
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="50%(6 of 12 col)"
                                                                    value="6"/>
                                                                <fourtyOne
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="41%(5 of 12 col)"
                                                                    value="5"/>
                                                                <thirtyThree
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="33%(4 of 12 col)"
                                                                    value="4"/>
                                                                <twentyFive
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="25%(3 of 12 col)"
                                                                    value="3"/>
                                                                <sixteen
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="16%(2 of 12 col)"
                                                                    value="2"/>
                                                                <eight
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="8%(1 of 12 col)"
                                                                    value="1"/>
                                                            </items>
                                                        </columnWidthMobile>
                                                    </items>
                                                </field>
                                            </containerLayout>
                                        </items>
                                    </field>
                                </items>
                            </column>
                        </items>
                    </columncontainer>
                    <background
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Background Config"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                             <file
						                        jcr:primaryType="nt:unstructured"
						                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
						                        allowUpload="{Boolean}false"
						                        autoStart="{Boolean}false"
						                        class="cq-droptarget"
						                        fieldLabel="Full width Background Image"
						                        fileNameParameter="./fileName"
						                        fileReferenceParameter="./fileReference"
						                        mimeTypes="[image]"
						                        multiple="{Boolean}false"
						                        name="./file"
						                        title="Upload Full width Background Image"
						                        uploadUrl="${suffix.path}"
						                        useHTML5="{Boolean}true"/> 
                                            <backgroundcolor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                fieldDescription="Full Width Background Color"
                                                fieldLabel="Full Width Background Color"
                                                name="./backgroundcolor"/>
                                            <containerFileReference
						                        jcr:primaryType="nt:unstructured"
						                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
						                        allowUpload="{Boolean}false"
						                        autoStart="{Boolean}false"
						                        class="cq-droptarget"
						                        fieldLabel="Container Background Image"
						                        fileNameParameter="./containerFileName"
						                        fileReferenceParameter="./containerFileReference"
						                        mimeTypes="[image]"
						                        multiple="{Boolean}false"
						                        name="./containerFile"
						                        title="Upload Container Background Image"
						                        uploadUrl="${suffix.path}"
						                        useHTML5="{Boolean}true"/> 
                                            <containerBackgroundcolor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                fieldDescription="Select Container Background Color"
                                                fieldLabel="Container Background Color"
                                                name="./containerBackgroundcolor"/>
                                            <containerbackgroundclass
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                                fieldDescription="Select the Background Class"
                                                fieldLabel="Container Background Class"
                                                multiple="{Boolean}true"
                                                name="./containerClass"
                                                rootPath="/content/cq:tags/loyaltydemo"/>
                                        </items>
                                    </field>
                                </items>
                            </column>
                        </items>
                    </background>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
